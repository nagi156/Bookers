<h1>Books</h1>

<p><strong>title</strong></p>
  <% @books.each do |book| %>
    <span><%= book.title %></span>
  
  <% end %>

<p><strong>body</strong></p>
  <% @books.each do |book| %>
    <span><%= book.body %></span>
    
    <%= link_to 'Show', book_path(book) %>
    
    
    
  <% end %>  


<h2>New book</h2>

<%= form_with model:Book do |f| %>
  
  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>

<% end %>