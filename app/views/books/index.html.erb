<h1>Books</h1>

<p><strong>title</strong></p>

<p><strong>body</strong></p>

<% @books.each do |book| %>
  <span><%= book.title %></span>

<% end %>  


<h2>New book</h2>

<%= form_with model: @book, url: 'books', method: :post do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>

<% end %>