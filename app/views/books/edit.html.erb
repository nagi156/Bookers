<h1>Editing Book</h1>

<p id="notice">
  <%= flash[:notice] %>

</p>


  <% if @book.errors.any? %>
  
  <div id="errors">
    <h2><%= pluralize(@book.errors.count,"errors") %> prohibited this book from being saved:</h2>
  
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
  
        <% end %>
  
      </ul>
  
  <% end %>

</div>

<div class= "edit_book">
  <%= form_with model:@book, url: update_book_path(@book.id), method: :patch do |f| %>

    <div>
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>
  
    </div>
  
    <div>
      <%= f.label :body, "Body" %>
      <%= f.text_area :body %>
  
    </div>
  
    <%= f.submit 'Update Book' %>

  <% end %>

</div>