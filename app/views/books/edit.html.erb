<p id="notice">
  <%= flash[:notice] %>

</p>


<h2>Editing Book</h2>
  <div class= "edit_book">
    <%= form_with model:@book, url: update_book_path(@book.id), method: :patch do |f| %>
  
      <div>
        <%= f.label :title, "Title" %>
        <%= f.text_field :title %>
    
      </div>
    
      <div>
        <%= f.label :body, "Body" %>
        <%= f.text_area :body %>
    
      </div>
    
      <%= f.submit 'Update Book' %>
  
    <% end %>

</div>