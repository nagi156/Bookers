<h1>Editing Book</h1>

<p id="notice">
  <%= flash[:notice] %>

</p>

<% if @book.errors.any? %>

  <div id="errors">
    <h2><%= pluralize(@book.errors.count,"errors") %> prohibited this book from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>

        <% end %>

      </ul>

  <% end %>

</div>

<div class="edit_book">
  <%= form_with model:@book, url: update_book_path(@book.id), method: :patch do |f| %>

    <div class="field">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title %>

    </div>

    <div class="field">
      <%= f.label :body, "Body" %>
      <%= f.text_area :body %>

    </div>
    
    <div class="actions">
      <%= f.submit 'Update Book' %>
    
    </div>

  <% end %>

  <%= link_to 'Show', book_path(@book.id) %> |


  <%= link_to 'Back', books_path %>

</div>